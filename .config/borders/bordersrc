#!/usr/bin/env bash

# Colors taken from tokyonight theme
tokyo_red="0xfff7768e"
tokyo_blue="0xff7aa2f7"
tokyo_green="0xff4fd6be"
tokyo_yellow="0xffffc777"
cat_lavender="0xffb4befe"
cat_mauve="0xffcba6f7"
