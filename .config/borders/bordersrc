cat_blue="0xff89b4fa"
gruv_yellow="0xffd5c4a1"
default_active_color=0xffe2e2e3
default_inactive_color=0xff414550

options=(
  active_color="$tokyo_blue"
  inactive_color="$default_inactive_color"
  hidpi=on
